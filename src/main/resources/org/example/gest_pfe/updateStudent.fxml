<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.gest_pfe.controllers.UpdateStudentController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier un Étudiant"
           style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- ERROR LABEL -->
    <Label fx:id="errorLabel"
           textFill="red"
           style="-fx-font-size: 12;"
           visible="false"/>

    <GridPane hgap="10" vgap="12">

        <Label text="Matricule:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="matriculeField"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                   editable="false"
                   style="-fx-background-color: #e6e6e6;"/>

        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Nom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Date de naissance:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateNaissancePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Spécialité:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="specialiteField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Parcours:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="parcoursCombo"
                  prefWidth="200"
                  GridPane.rowIndex="6"
                  GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Master"/>
                    <String fx:value="License"/>
                    <String fx:value="Ingenieurie"/>
                </FXCollections>
            </items>
        </ComboBox>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Modifier" onAction="#handleUpdate"/>
        <Button text="Annuler" onAction="#handleCancel"/>
    </HBox>

</VBox>
